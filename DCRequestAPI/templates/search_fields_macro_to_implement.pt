<div>
	<span tal:condition="python: 'match_query' not in search_params or search_params['match_query'] is None or search_params['match_query'] == ''">
		<input id="aggs_search_input" form="search_form" type="text" name="match_query" autocomplete="off"/>
		<input form="search_form" type="submit" value="Search in filters"/>
	</span>
	<span tal:condition="python: 'match_query' in search_params and search_params['match_query'] is not None and len(search_params['match_query']) > 0">
		<input id="aggs_search_input" form="search_form" type="text" name="match_query" value="${search_params['match_query']}" autocomplete="off"/>
		<input form="search_form" type="submit" value="Search in filters"/>
	</span>
	<div id="aggs_search_suggestions_list" class="suggestions_list hidden">
		<ul class="ul-no-bullet"></ul>
	</div>
</div>
